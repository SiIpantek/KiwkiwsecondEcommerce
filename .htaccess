# Laravel Security - Block access to sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to .env files
<FilesMatch "^\.env">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to composer files
<FilesMatch "^(composer\.(json|lock)|package\.json|package-lock\.json)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to git files
<FilesMatch "^\.git">
    Order allow,deny
    Deny from all
</FilesMatch>
